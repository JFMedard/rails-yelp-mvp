<h1>Restaurants</h1>

<div class="container">
  <h1 class="text-center">Tasks</h1>

  <ul class="row text-center">
    <% @restaurants.each do |restaurant|  %>
    <div class="col alert alert-primary text-center m-2 align-middle">
      <label for="completed" class="align-middle"><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></label>
    </div>
    <% end %>
  </ul>

  <div class="alert alert-success text-center m-2 align-middle">
    <%= link_to "Create new restaurant", new_restaurant_path %>
  </div>


</div>
